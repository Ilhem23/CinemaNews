<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context="com.example.aissaouiilhem.cinemanews.Personnage">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_400"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/darker_gray"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="@color/background2"
                android:backgroundTint="@color/background2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background2"
                    android:backgroundTint="@color/background2"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/background2"
                        app:srcCompat="@drawable/act3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:text="Roar Uthaug "
                            android:textColor="@color/accent"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:theme="?android:attr/textViewStyle" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Metiers : Réalisateur "
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Date naissance: 25 - 08 - 1973"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Ans de carrière : 15"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background2"
                    android:backgroundTint="@color/background2"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/b1"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_selector" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_selector" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_selector" />

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_selector" />

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_selector" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="@color/background2" />

                    <Button
                        android:id="@+id/b6"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/favorie" />
                </LinearLayout>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="biographie"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:theme="?android:attr/textViewStyle" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roar Uthaug est né en Norvège en 1973 ; il s’intéresse très tôt à la musique et au cinéma et intègre donc l’école du cinéma norvégien de Lillehammer. Le cinéaste y réalise un court métrage, Regjeringen Martin, très remarqué en 2003. Il travaille ensuite pour ... "
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/act"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Filmographie"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:theme="?android:attr/textViewStyle" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/sale1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/wav" />

                            <TextView
                                android:id="@+id/s11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="The Wave"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/sale2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/dag" />

                            <TextView
                                android:id="@+id/s22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dagmar"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/sale3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/tombraider" />

                            <TextView
                                android:id="@+id/s33"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tomb Raider"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp" />
                        </LinearLayout>


                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/ass2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Commentaire"
                    android:textColor="@color/accent"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:theme="?android:attr/textViewStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="500dp"
                        android:layout_height="80dp"
                        android:background="@color/cardview_light_background"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Commenter"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageButton
                        android:id="@+id/imageButton13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/background2"
                        app:srcCompat="@drawable/ic_send_black_24dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
