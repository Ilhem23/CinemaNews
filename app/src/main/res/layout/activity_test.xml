<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context="com.example.aissaouiilhem.cinemanews.test">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_400"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/darker_gray"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@color/background2"
            android:backgroundTint="@color/background2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background2"
                android:backgroundTint="@color/background2"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/background2"
                    app:srcCompat="@drawable/tombraider" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Thomb Raider"
                        android:textColor="@color/accent"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:theme="?android:attr/textViewStyle" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Date de sortie 15 Mars 2018"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="De Roar Uthaug"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Avec Alicia Vikander"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/accent"
                        android:text="Bandes d'annonces"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background2"
                android:backgroundTint="@color/background2"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/b1"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_selector" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_selector" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_selector" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_selector" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background_selector" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/background2" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="32dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/favorie" />
            </LinearLayout>

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Description"
                android:textColor="@color/accent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="?android:attr/textViewStyle" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lara Croft, 21 ans, n'a ni projet, ni ambition : fille d'un explorateur excentrique porté disparu depuis sept ans, cette jeune femme rebelle et indépendante refuse de reprendre l'empire de son père. Convaincue qu'il n'est pas mort, elle met le cap sur la destination où son père a été vu pour la dernière fois : la tombe légendaire d'une île mythique au large du Japon. Mais le voyage se révèle des plus périlleux et il lui faudra affronter d'innombrables ennemis et repousser ses propres limites pour devenir &quot;Tomb Raider&quot;"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/act"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Acteurs et Réalisateurs"
                android:textColor="@color/accent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="?android:attr/textViewStyle" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sale1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/act3" />

                        <TextView
                            android:id="@+id/s11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Roar Uthaug"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sale2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/act2" />

                        <TextView
                            android:id="@+id/s22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alicia Vikander"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sale3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/act1" />

                        <TextView
                            android:id="@+id/s33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gerard Batle"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp" />
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/assl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Salles De Projection"
                android:textColor="@color/accent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="?android:attr/textViewStyle" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/salle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/champo" />

                        <TextView
                            android:id="@+id/s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Champo"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/salle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/salle2" />

                        <TextView
                            android:id="@+id/s2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cinéma du Panthéon"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/salle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/salle3" />

                        <TextView
                            android:id="@+id/s3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="La Clef"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp" />
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Films Liés"
                android:textColor="@color/accent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/li1" />

                    <ImageButton
                        android:id="@+id/imageButton27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/li2" />

                    <ImageButton
                        android:id="@+id/imageButton26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/li3" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/asslii2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Commentaire"
                android:textColor="@color/accent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:theme="?android:attr/textViewStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="500dp"
                    android:layout_height="80dp"
                    android:background="@color/cardview_light_background"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Commenter"
                    android:textColor="@color/colorPrimaryDark" />

                <ImageButton
                    android:id="@+id/imageButton13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/background2"
                    app:srcCompat="@drawable/ic_send_black_24dp" />

            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
